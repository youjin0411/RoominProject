<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainPage">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/fragment_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="0dp">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="103dp"
                    android:layout_height="39dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/logo" />

                <ImageView
                    android:id="@+id/alram"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="346dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/mypagealram" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="100dp"
                    android:fontFamily="@font/gmarketsansbold"
                    android:text="MY"
                    android:textColor="#494949"
                    android:textSize="30dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="150dp"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/round_button_3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="25dp"
                        android:fontFamily="@font/gmarketsansmedium"
                        android:text="이루다"
                        android:textSize="19dp" />

                    <LinearLayout
                        android:layout_width="75dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="150dp"
                        android:background="@drawable/backboxgray">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="12dp"
                            android:fontFamily="@font/gmarketsansmedium"
                            android:text="수정하기"
                            android:textSize="13dp"
                            android:textColor="#FBFBFB" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="250dp"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/card" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="25dp"
                        android:fontFamily="@font/gmarketsansmedium"
                        android:text="결제 수단 등록"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="150dp"
                        android:fontFamily="@font/gmarketsansmedium"
                        android:text=">"
                        android:textSize="18dp"
                        android:textColor="#434343" />
                </LinearLayout>
                <View
                    android:layout_marginTop="310dp"
                    android:layout_width="380dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="1dp"
                    android:background="#F4F4F4" />

                <TextView
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gmarketsansmedium"
                    android:text="내역"
                    android:layout_marginTop="330dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#A4A4A4"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="350dp"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/review" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="25dp"
                        android:fontFamily="@font/gmarketsansmedium"
                        android:text="내가 쓴 리뷰"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="400dp"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/specification" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="25dp"
                        android:fontFamily="@font/gmarketsansmedium"
                        android:text="내 서비스 명세서"
                        android:textSize="16dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gmarketsansmedium"
                    android:text="설정"
                    android:layout_marginTop="480dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#A4A4A4"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="500dp"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/setting" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="25dp"
                        android:fontFamily="@font/gmarketsansmedium"
                        android:text="계정 설정"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="550dp"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/mypagemenualram" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="25dp"
                        android:fontFamily="@font/gmarketsansmedium"
                        android:text="알림 설정"
                        android:textSize="16dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gmarketsansmedium"
                    android:text="기타"
                    android:layout_marginTop="620dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#A4A4A4"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="640dp"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="25dp"
                        android:fontFamily="@font/gmarketsansmedium"
                        android:text="고객센터"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="690dp"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/talk" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="25dp"
                        android:fontFamily="@font/gmarketsansmedium"
                        android:text="공지사항"
                        android:textSize="16dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="740dp"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/qna" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="25dp"
                        android:fontFamily="@font/gmarketsansmedium"
                        android:text="FAQ"
                        android:textSize="16dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="790dp"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/lougout" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="25dp"
                        android:fontFamily="@font/gmarketsansmedium"
                        android:text="로그아웃"
                        android:textSize="16dp" />
                </LinearLayout>
            </FrameLayout>
        </ScrollView>
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/navigation_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:menu="@menu/navigation_menu"
            app:labelVisibilityMode="labeled" />
    </RelativeLayout>>
</LinearLayout>